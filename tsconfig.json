{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "dist",
    "moduleDetection": "force",
    "noImplicitOverride": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["es2023", "dom"],
  },
  "include": [
    "src",
  ]
}
